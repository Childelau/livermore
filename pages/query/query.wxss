.title1{
  height: 3rem;
  text-align: center;
  line-height: 3rem;
  color: white;
  font-size: 18px;
  background-color: #2B91D5;
  letter-spacing: 3px;
}
.title2{
  padding: 5px 0 10px 16px;
  font-size: 14px;
  font-weight: bold;
  border-bottom: 1px lightgrey solid;
}
.title3{
  padding: 16px 16px 30px 16px;
}
.title3 input{
  border: 1px lightgray solid;
  padding: 8px;
}
.title4{
  padding: 0 16px;
}
.title4 view{
  width: 100%;
  background-color: #2B91D5;
  color: white;
  height: 2.6rem;
  text-align: center;
  line-height: 2.6rem;
  font-weight: bold;
  border-radius: 6px;
  letter-spacing: 2px;
}
.title5{
  padding: 10px 8px;
}
.list{
	border: 1px lightgray solid;
	border-radius: 6px;
	margin-bottom: 10px;
	box-shadow: 1px -1px 2px #EEEEEE;
	display: flex;
	padding: 8px 8px 40px 8px;
	font-size: 14px;
	align-items: baseline;
	flex-wrap: wrap;
	position: relative;
}
.sName,
.code,
.name{
  color: #006699;
  margin-right: 6px;
  font-size: 16px;
}

.add{
  background-color:  #006699;
	color: white;
	padding: 2px 12px;
	border-radius: 16px;
	position: absolute;
	right: 8px;bottom: 8px;
}
.progress{
  display: block;
  width: 100%;
  word-break: break-all;
  margin-top: 6px;
}




















